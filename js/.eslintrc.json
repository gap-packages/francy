{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11
  },
  "parser": "babel-eslint",
  "globals": {
    "d3": true,
    "VERSION": true,
    "DESCRIPTION": true,
    "FRANCY_DESC": true,
    "MathJax": true
  },
  "ignorePatterns": [
    "**.json",
    "**/*.test.js",
    "**/__test__/*.js",
    "**.html",
    "karma*.js",
    "**/node_modules/**",
    "**/dist/**", 
    "**/lib/**",
    "**/jupyter_francy/**"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-else-return": 1,
    "space-unary-ops": 2,
    "brace-style": ["error", "1tbs"],
    "no-unused-vars": [2, { "vars": "all", "varsIgnorePattern": ".*ignore" }],
    "no-global-assign": ["error", { "exceptions": ["__webpack_public_path__"] }],
    "sort-imports": ["error", {
        "ignoreCase": false,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
    }]
  }
}
